{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["dom", "es2018"],
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals":true,
      "removeComments": true,    
      "resolveJsonModule": true,
      "strict": true,
      "typeRoots": ["node_modules/@types"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"]
  }